package chap_06;

public class _03_Return {
//	호텔 전화번호를 반환하는 메소드
	public static String getphoneNumber() {
		String phoneNumber = "031-1234-5678";	
		return phoneNumber;
	}
	
//	호텔 주소를 반환하는 메소드
	public static String getAddress() {
//		String address = "경기도 성남시 수정구";
//		return address;
		return "경기도 성남시 수정구";
		
	}
	
//	호텔 엑티비티를 반환하는 메소드
	public static String getActivities() {
		return "볼링장, 탁구장, 노래방";
	}
	
	public static void main(String[] args) {
//		return?
//		메소드 실행 결과를 밖으로 돌려주는 값
//		반환 타입이 void가 아닌 경우, 반드시 return을 사용해야 함.
		String contactNumber = getphoneNumber();
		System.out.println(contactNumber);
		
		String contactAddress = getAddress();
		System.out.println(contectAddress);
		
		String contactActivities = getActivities();
		System.out.println(contactActivities);
		
		
	}
}

package chap_04;

public class _05_For {
	public static void main(String[] args) {
//		for문은 정해진 횟수만큼 반복할 때 사용하는 반복문이다.
//		초기값 -> 조건 검사 -> 실행 -> 증감순으로 흐름이 진행된다.
		
//		반복문을 쓰지 않는 경우
		System.out.println("어서오세요. 성일정보고입니다.");
		System.out.println("어서오세요. 성일정보고입니다.");
		System.out.println("어서오세요. 성일정보고입니다.");
		System.out.println("어서오세요. 성일정보고입니다.");
		System.out.println("어서오세요. 성일정보고입니다.");
		System.out.println("어서오세요. 성일정보고입니다.");
		System.out.println("어서오세요. 성일정보고입니다.");
		System.out.println("어서오세요. 성일정보고입니다.");
		
//		어서오세요를 -> 환영합니다로 변경 or 성잃정보고를 소프트웨어개발과로 변경
		System.out.println("환영합니다. 성일정보고입니다.");
		System.out.println("환영합니다. 성일정보고입니다.");
		System.out.println("환영합니다. 성일정보고입니다.");
		System.out.println("환영합니다. 성일정보고입니다.");
		System.out.println("환영합니다 소프트웨어개발과입니다.");
		System.out.println("환영합니다 소프트웨어개발과입니다.");
		System.out.println("환영합니다 소프트웨어개발과입니다.");
		System.out.println("환영합니다 소프트웨어개발과입니다.");
		
		System.out.println("\n==== 여기부터 반복문 사용 ====\n");
		
//		for(초기값; 조건; 증감) {
//			실핼할 코드
//		}
		
		for(int i = 0; i < 10; i++) {
			System.out.println("환영합니다 소프트웨어개발과입니다.");
		}
		
		
	}
}

package chap_04;

public class _09_MultipleTable {
	public static void main(String[] args) {
		for(int i = 2; i <= 9; i++) {
			System.out.printf("=====%dë‹¨=====\n", i);
			for(int j = 1; j <= 9; j++) {
				System.out.printf("%d * %d = %2d \n", i, j, (i*j));
			}
		}
		
		for(int i = 1; i <= 9; i++) {
			for(int j = 2; j <= 9; j++) {
				System.out.printf("%d * %d = %d\t", j, i, (j*i));
			}
			System.out.println();
		}
	}
}
